---
const currentPath = new URL(Astro.request.url).pathname;
---

<nav class="flex justify-end items-center space-x-9 px-32">
  <h3 class={currentPath === "/" ? "underline" : ""}>
    <a href="/">Home</a>
  </h3>
  <h3 class={currentPath === "/blog" ? "underline" : ""}>
    <a href="/blog">Blog</a>
  </h3>
  <h3 class={currentPath === "/about" ? "underline" : ""}>
    <a href="/about">About</a>
  </h3>
</nav>
