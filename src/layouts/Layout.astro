---
import "@fontsource-variable/work-sans";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />

    <!-- Primary Meta Tags -->
    <title>Udasi Tharani | Software Developer</title>
    <meta name="title" content="Udasi Tharani | Software Developer" />
    <meta
      name="description"
      content="Udasi is a software developer with a love for great products and great technology."
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://udasi.me/" />
    <meta property="og:title" content="Udasi Tharani | Software Developer" />
    <meta
      property="og:description"
      content="Udasi is a software developer with a love for great products and great technology."
    />
    <meta property="og:image" content="/meta.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://udasi.me/" />
    <meta
      property="twitter:title"
      content="Udasi Tharani | Software Developer"
    />
    <meta
      property="twitter:description"
      content="Udasi is a software developer with a love for great products and great technology."
    />
    <meta property="twitter:image" content="/meta.png" />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="w-screen h-screen bg-black text-white py-6 sm:py-8 md:py-12">
    <slot />
  </body>
</html>
<style is:global>
  .tooltip {
    @apply invisible absolute;
  }

  .has-tooltip:hover .tooltip {
    @apply visible z-50;
  }

  html {
    background-color: #101010;
  }

  /* .h-full tailwind class not applying styles */
  .h-full {
    height: 100%;
  }

  * {
    scroll-behavior: smooth;
  }

  *::-webkit-scrollbar {
    display: none;
  }
</style>
