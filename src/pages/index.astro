---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import ProjectCard from "../components/ProjectCard";
---

<Layout title="Welcome to Astro.">
  <Navbar />
  <section class="flex flex-col py-64 max-w-5xl mx-auto px-32">
    <h1 class="text-2xl text-center">
      <span class="text-4xl">Hello! I am Udasi.</span><br />I am a software
      developer with a love<br />for great products and technology.
    </h1>
  </section>

  <section class="w-full">
    <ProjectCard
      title="Vidpedia"
      image="/public/projects/vidpedia/thumbnail.png"
      role="Founding Engineer, Full Stack"
      subtitle="A collection of video editing templates for professional editors."
      link="/projects/vidpedia"
      client:only="react"
      accentColor="#FDFC47"
    />
    <div class="h-28"></div>
    <ProjectCard
      title="Jupiter"
      image="/public/projects/jupiter/thumbnail.png"
      role="Software Engineer, Frontend"
      subtitle="India's leading neobank."
      link="https://jupiter.money"
      client:only="react"
      accentColor="#FC7A69"
    />
  </section>
</Layout>
